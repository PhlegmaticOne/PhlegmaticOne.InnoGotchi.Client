@model IList<PhlegmaticOne.InnoGotchi.Web.ViewModels.Statistics.PreviewFarmStatisticsViewModel>
@{
    Layout = "_Column_Layout";
    ViewData["Title"] = "Collaborated farms";
}

@if (Model.Count == 0)
{
    @await Html.PartialAsync("~/Views/_Partial_Views/Shared/PageTitle.cshtml", "You haven't collaborated farms")
}
else
{
    @await Html.PartialAsync("~/Views/_Partial_Views/Shared/PageTitle.cshtml", "Collaborated farms overview")
    @foreach (var statistics in Model)
    {
        @(await Html.PartialAsync("~/Views/_Partial_Views/Overview/PreviewFarmStatistics.cshtml", statistics))
    }
}

@section ColumnContent
{
    @await Html.PartialAsync("~/Views/_Partial_Views/Overview/FarmStatisticsNavigation.cshtml")
}