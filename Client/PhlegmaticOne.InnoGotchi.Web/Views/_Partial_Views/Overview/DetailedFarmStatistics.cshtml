@model PhlegmaticOne.InnoGotchi.Web.ViewModels.Statistics.DetailedFarmStatisticsViewModel

<div class="row d-flex justify-content-center align-items-center h-100 me-sm-3 ms-sm-3 me-3 ms-3 me-md-0 ms-md-0">
    <div class="col-lg-12 col-md-12 col-sm-12 mb-4 mb-lg-0 bg-dark text-white" style="border-radius: 1rem">
        <h5 class="h5 p-3 text-center">Farm statistics</h5>
        <hr class="mb-2 bg-white">

        <div class="row pt-1 ps-3">
            <div class="col-sm-12 col-md-6 col-lg-6">
                <h6 class="h6">Alive pets count</h6>
                <label class="text-white-50" id="alive-pets-count">@Model.AlivePetsCount</label>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6 mt-sm-3 mt-md-0">
                <h6 class="h6">Dead pets count</h6>
                <label class="text-white-50" id="dead-pets-count">@Model.DeadPetsCount</label>
            </div>
        </div>

        <hr class="mb-2 bg-white">

        <div class="row p-1 justify-content-center">
            <div class="col-md-8">
                <div id="donut-chart"></div>
            </div>
        </div>

        <hr class="mb-2 bg-white">

        <div class="row pt-1 ps-3">
            <div class="col-sm-12 col-md-6 col-lg-6">
                <h6 class="h6">Average feeding period</h6>
                <label class="text-white-50">@Model.AverageFeedingPeriod.ToString(@"dd\:hh\:mm\:ss")</label>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6 mt-sm-3 mt-md-0">
                <h6 class="h6">Average quenching period</h6>
                <label class="text-white-50">@Model.AverageThirstQuenchingPeriod.ToString(@"dd\:hh\:mm\:ss")</label>
            </div>
        </div>

        <hr class="mb-2 bg-white">

        <div class="row pt-1 ps-3">
            <div class="col-sm-12 col-md-6 col-lg-6">
                <h6 class="h6">Average alive pets age</h6>
                <label class="text-white-50">@Model.AverageAlivePetsAge.ToString("F1")</label>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6 mt-sm-3 mt-md-0">
                <h6 class="h6">Average dead pets age</h6>
                <label class="text-white-50">@Model.AverageDeadPetsAge.ToString("F1")</label>
            </div>
        </div>

        <hr class="bg-white">

        <div class="row pt-1 text-center mb-3">
            <div class="col-12">
                <h6 class="h6">Average happiness days count</h6>
                <label class="text-white-50">@Model.AverageHappinessDaysCount.ToString("F1")</label>
            </div>
        </div>
    </div>
</div>